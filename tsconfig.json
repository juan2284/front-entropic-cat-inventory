{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths" : {
      "@/*" : ["./src/*"],
      "@/views/*" : ["views/*"],
      "@/layouts/*" : ["layouts/*"],
      "@/components/*" : ["components/*"],
      "@/hooks/*" : ["hooks/*"],
      "@/data/*" : ["data/*"],
      "@/api/*" : ["api/*"],
      "@/lib/*" : ["lib/*"],
      "@/reducers/*" : ["reducers/*"],
      "@/types/*" : ["types/*"],
      "@/globals/*" : ["globals/*"],
      "@/utils/*" : ["utils/*"],
      "@/routes/*" : ["routes/*"]
    },

    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}